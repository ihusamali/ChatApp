<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificChat"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/down_round"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/callButtonChat"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/call_icon_white"/>
            <TextView
                android:id="@+id/nameChat"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="NAME"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/topDpChat"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/image_icon"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/chatRecycler"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/messageBlockChat"
        android:textColor="@color/black"
        android:background="@drawable/edittext"
        android:layout_gravity="start"
        android:layout_width="350dp"
        android:layout_height="50dp" />
        <ImageView
            android:id="@+id/sendButtonChat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/send"
            />
    </LinearLayout>

</LinearLayout>